<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.91"/>

    <android.support.constraint.Guideline
            android:id="@+id/guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="41dp"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.07"
            android:id="@+id/guideline11"/>

    <android.support.v7.widget.CardView
            card_view:cardCornerRadius="5dp"
            android:layout_height="0dp"
            android:id="@+id/cardView1"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline1"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/guideline11"
            android:layout_width="0dp">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/writing"
                android:id="@+id/constraintLayout"
                tools:layout_editor_absoluteY="8dp">

            <android.support.v7.widget.CardView
                    card_view:cardCornerRadius="5dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cardView2"
                    android:layout_width="0dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="20dp">
                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/white"
                        android:id="@+id/constraintLayout1"
                        tools:layout_editor_absoluteY="8dp">
                    <TextView
                            android:textColor="@color/text"
                            android:text="TextView"
                            android:textSize="18dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView1"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            android:layout_marginTop="20dp"
                            app:layout_constraintTop_toBottomOf="@+id/textView3"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    card_view:cardCornerRadius="5dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cardView3"
                    android:layout_width="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/cardView2">

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/writingText"
                        android:id="@+id/constraintLayout2"
                        tools:layout_editor_absoluteY="8dp">

                    <EditText
                            android:layout_width="0dp"
                            android:inputType="textPersonName"
                            android:hint="Enter translation"
                            android:textColorHint="@color/defaultText"
                            android:textColor="@color/text"
                            android:gravity="center"
                            android:background="@android:color/transparent"
                            android:ems="10"
                            android:id="@+id/editText2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/button"
                            android:layout_height="0dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                    <Button
                            android:text="Check"
                            android:background="@drawable/button_style"
                            android:textColor="@color/text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/button"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                    />
                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>

            <TextView
                    android:text="TextView"
                    android:textColor="@color/writingtxt"
                    android:layout_width="wrap_content"
                    android:textSize="18dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/cardView3"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="20dp"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:background="@null"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/next"
                    android:id="@+id/imageButton3"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/cardView3"
                    android:layout_marginTop="20dp"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>