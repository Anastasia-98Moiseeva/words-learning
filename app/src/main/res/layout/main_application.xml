<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:gravity="top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainApplication"
        android:background="@color/screenBackground">

    <TextView
            android:text="Main menu"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_width="411dp"
            android:layout_height="64dp"
            android:textSize="30sp"
            android:background="@color/headlineBackground"
            android:fontFamily="monospace"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0" android:id="@+id/textView2"/>
    <Button
            android:text="Button"
            android:layout_width="255dp"
            android:layout_height="55dp"
            android:id="@+id/button5" android:layout_marginTop="90dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="80dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp"/>
    <Button
            android:text="Button"
            android:layout_width="255dp"
            android:layout_height="55dp"
            android:id="@+id/button6" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/button5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="80dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp"/>
    <Button
            android:text="Button"
            android:layout_width="255dp"
            android:layout_height="55dp"
            android:id="@+id/button7" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/button6" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="80dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp"/>
    <Button
            android:text="Button"
            android:layout_width="255dp"
            android:layout_height="55dp"
            android:id="@+id/button8" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/button7" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="80dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp"/>


</android.support.constraint.ConstraintLayout>
