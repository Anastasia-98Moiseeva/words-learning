<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_width="411dp"
            android:layout_height="64dp"
            android:textSize="30sp"
            android:fontFamily="monospace"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0" android:id="@+id/textView2"/>
    <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:id="@+id/button4"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="80dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp" android:layout_height="wrap_content"
            android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/button3"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:id="@+id/button1" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="80dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp" android:layout_height="wrap_content"/>

    <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:id="@+id/button3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="80dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp" android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/button2"/>

    <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:id="@+id/button2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="80dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp" android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/button1"/>
</android.support.constraint.ConstraintLayout>