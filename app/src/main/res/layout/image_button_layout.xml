<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

    <android.support.constraint.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_margin="8dp"
                card_view:cardCornerRadius="8dp"
                card_view:layout_constraintEnd_toStartOf="@+id/guideline10"
                card_view:layout_constraintStart_toStartOf="@+id/guideline9"
                card_view:layout_constraintTop_toTopOf="@+id/guideline8">

            <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/text"
                    style="@android:style/TextAppearance.Medium"
                    android:background="@drawable/button_style"
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintEnd_toEndOf="parent"/>
        </android.support.v7.widget.CardView>

        <android.support.constraint.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline8" card_view:layout_constraintGuide_percent="0.30"/>

        <android.support.constraint.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline9" card_view:layout_constraintGuide_percent="0.15"/>

        <android.support.constraint.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline10" card_view:layout_constraintGuide_percent="0.85"/>

    </android.support.constraint.ConstraintLayout>
</LinearLayout>