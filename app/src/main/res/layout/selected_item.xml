<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:orientation="horizontal" android:layout_width="match_parent"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_margin="5dp"
                                    card_view:cardCornerRadius="10dp"
                                    card_view:cardElevation="5dp"
                                    android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#761C59">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Teacher Name"
                android:id="@+id/nameTextView"
                android:padding="5dp"
                android:textColor="@color/colorAccent"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/teacherImageView" android:layout_marginTop="1dp"
                android:layout_marginStart="1dp" android:layout_alignParentStart="true"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Teacher Description..."
                android:id="@+id/descritionTextView"
                android:padding="5dp"
                android:layout_toRightOf="@+id/teacherImageView" android:layout_marginTop="4dp"
                android:layout_alignParentTop="true" android:layout_toEndOf="@+id/nameTextView"
                android:layout_marginStart="16dp" android:layout_toStartOf="@+id/myCheckBox"
                android:layout_marginEnd="13dp"/>

        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/myCheckBox"
                android:layout_alignParentRight="true"
                android:isScrollContainer="true"
        />

    </RelativeLayout>
</android.support.v7.widget.CardView>