<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/button"
                android:id="@+id/relativeLayout">

            <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Word"
                    android:id="@+id/wordTextView"
                    android:padding="5dp"
                    android:textColor="@color/text"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp" android:layout_alignParentStart="true"
                    android:layout_marginStart="15dp"/>

            <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Tranclation"
                    android:textColor="@color/text"
                    android:id="@+id/translationTextView"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/wordTextView" android:layout_marginStart="15dp"/>

            <CheckBox
                    android:layout_width="34dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/myCheckBox"
                    android:layout_alignParentRight="true"
                    android:isScrollContainer="true"
                    android:buttonTint="@color/text"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp" android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" android:layout_marginEnd="-1dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>